{
  "compilerOptions": {
   

    "target": "ES2021",                                 
    "lib": ["ES2017", "DOM"],                                        
 
    /* Modules */
    "module": "commonjs",                               
    "rootDir": ".",                                  
    "moduleResolution": "node",                      

   "types": ["cypress", "cypress-mochawesome-reporter", "node"],                                      
   
     
     "removeComments": false,                           

     "noEmitOnError": true,                            


    "allowSyntheticDefaultImports": true,             
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,  

    /* Type Checking */
    "strict": true,                                     
    "noImplicitAny": true,                           
    "noUnusedLocals": true,                           
    "noUnusedParameters": true,                       
    "noImplicitReturns": true,                        


  },
    "include": ["**/*.ts"]
}
